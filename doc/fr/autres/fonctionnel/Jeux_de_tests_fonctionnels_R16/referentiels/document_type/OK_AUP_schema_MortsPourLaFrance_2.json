{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "patternProperties": {
    "#management": {
    }
  },
  "additionalProperties": false,
  "required": [
    "Title",
    "Tag",
    "Birth"
  ],
  "properties": {
    "DescriptionLevel": {
      "enum": [
        "Item"
      ]
    },
    "Title": {
      "type": "string"
    },
    "ArchivalAgencyArchiveUnitIdentifier": {},
    "Tag": {
      "type": "array",
      "description": "Cas hypothétique où on oblige 1, 2 ou 3 valeurs, mais pas plus.",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "string"
      }
    },
    "Birth": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "Year",
          "Region"
        ],
        "dependencies": {
          "Day": [
            "Month"
          ]
        },
        "properties": {
          "Year": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
              "type": "integer",
              "minimum": 1850,
              "maximum": 1900
            }
          },
          "Month": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            }
          },
          "Day": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
              "type": "integer",
              "minimum": 1,
              "maximum": 31
            }
          },
          "Region": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
              "type": "string",
              "description": "Les noms de régions doivent être : n°dept - nom",
              "pattern": "^\\d\\d - .*$"
            }
          }
        }
      }
    }
  }
}