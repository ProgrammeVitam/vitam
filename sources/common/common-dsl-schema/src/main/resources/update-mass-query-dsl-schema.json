{
  "DSL": {
    "format": "object",
    "elements": {
      "$roots": {
        "format": "array",
        "itemtype": "guid",
        "optional": true,
        "hint": "Array of roots"
      },
      "$query": {
        "format": "array",
        "itemtype": "ROOT_QUERY",
        "min": 0,
        "hint": "List of query"
      },
      "$threshold": {
        "format": "ref",
        "type": "THRESHOLD",
        "optional": true,
        "hint": "Threshold"
      },
      "$action": {
        "format": "array",
        "itemtype": "ACTION",
        "min": 1,
        "optional": false,
        "hint": "Modification to apply on results"
      }
    }
  },
  "ROOT_QUERY": {
    "format": "union",
    "types": [
      "QUERY",
      {
        "format": "object",
        "elements": {
          "$depth": {
            "format": "ref",
            "type": "integer",
            "optional": true,
            "hint": "Depth of query"
          }
        }
      }
    ]
  },
  "QUERY": {
