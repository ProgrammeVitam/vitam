{
  "DSL": {
    "format": "object",
    "elements": {
      "$roots": {
        "format": "array",
        "itemtype": "guid",
        "optional": true,
        "hint": "Array of roots"
      },
      "$query": {
        "format": "array",
        "itemtype": "ROOT_QUERY",
        "min": 0,
        "hint": "List of query"
      },
      "$filter": {
        "format": "ref",
        "type": "FILTER",
        "optional": true,
        "hint": "Filters"
      },
      "$projection": {
        "format": "ref",
        "type": "PROJECTION",
        "optional": false,
        "hint": "Projections to apply on results"
      },
      "$facets": {
        "format": "array",
        "itemtype": "FACET",
        "optional": true,
        "hint": "List of facets"
      }
    }
  },
  "ROOT_QUERY": {
    "format": "union",
    "types": [
      "QUERY",
      {
        "format": "object",
        "elements": {
          "$depth": {
            "format": "ref",
            "type": "integer",
            "optional": true,
            "hint": "Depth of query"
          }
        }
      }
    ]
  },
  "QUERY": {
    "format": "keychoice",
    "choices": {
      "$match": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$search": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_all": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_phrase": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_phrase_prefix": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$wildcard": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$regex": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$eq": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$exists": "string",
      "$missing": "string",
      "$ne": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$or": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Disjonction de sous-requêtes"
      },
      "$and": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Conjonction de sous-requêtes"
      },
      "$not": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Négation de sous-requêtes"
      },
      "$in": {
        "format": "anykey",
        "itemtype": {
          "format": "array",
          "itemtype": "anyvalue"
        },
        "min": 1,
        "max": 1,
        "hint": "recherche  de sous-requêtes"
      },
      "$nin": {
        "format": "anykey",
        "itemtype": {
          "format": "array",
          "itemtype": "anyvalue"
        },
        "min": 1,
        "max": 1,
        "hint": "négation de recherche de sous-requêtes"
      },
      "$range": {
        "format": "anykey",
        "itemtype": {
          "format": "anykey",
          "itemtype": "anyvalue",
          "min": 2,
          "max": 2
        },
        "hint": "intervalle de sous-requêtes"
      },
      "$gt": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$lt": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$lte": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$gte": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      }
    }
  },
  "FILTER": {
    "format": "object",
    "elements": {
      "$offset": {
        "format": "ref",
        "type": "posinteger",
        "optional": true,
        "hint": "Position of results"
      },
      "$limit": {
        "format": "ref",
        "type": "posinteger",
        "optional": true,
        "hint": "Max number of results"
      },
      "$orderby": {
        "format": "anykey",
        "itemtype": {
          "format": "enum",
          "values": [
            -1,
            1
          ]
        },
        "optional": true,
        "hint": "Sorts on result"
      }
    }
  },
  "PROJECTION": {
    "format": "object",
    "elements": {
      "$fields": {
        "format": "anykey",
        "itemtype": {
          "format": "enum",
          "values": [
            1
          ]
        },
        "optional": true,
        "hint": "Fields to retrieve in the result"
      }
    }
  },
  "FACET": {
    "format": "object",
    "min": 2,
    "max": 2,
    "elements": {
      "$name": {
        "format": "ref",
        "type": "string",
        "optional": false,
        "hint": "Name of facet"
      },
      "$terms": {
        "format": "ref",
        "type": "TERMS_FACET",
        "optional": true,
        "hint": "Terms facet of type bucket"
      },
      "$date_range": {
        "format": "ref",
        "type": "DATE_RANGE_FACET",
        "optional": true,
        "hint": "Date range facet"
      },
      "$filters": {
        "format": "ref",
        "type": "FILTERS_FACET",
        "optional": true,
        "hint": "Filters facet of type bucket"
      }
    }
  },
  "TERMS_FACET": {
    "format": "object",
    "elements": {
      "$field": {
        "format": "ref",
        "type": "string",
        "optional": false,
        "hint": "Field of facet"
      },
      "$size": {
        "format": "ref",
        "type": "posinteger",
        "optional": false,
        "hint": "Max number of buckets"
      },
      "$order": {
        "format": "ref",
        "type": "string",
        "optional": false,
        "hint": "Order of buckets"
      }
    }
  },
  "DATE_RANGE_FACET": {
    "format": "object",
    "elements": {
      "$field": {
        "format": "ref",
        "type": "string",
        "optional": false,
        "hint": "Field of facet"
      },
      "$format": {
        "format": "ref",
        "type": "string",
        "optional": false,
        "hint": "Date format"
      },
      "$ranges": {
        "format": "array",
        "itemtype": "RANGE",
        "optional": false,
        "min": 1,
        "hint": "List of ranges"
      }
    }
  },
  "RANGE": {
    "format": "object",
    "min": 1,
    "max": 2,
    "elements": {
      "$from": {
        "format": "ref",
        "type": "string",
        "optional": true,
        "hint": "Date from"
      },
      "$to": {
        "format": "ref",
        "type": "string",
        "optional": true,
        "hint": "Date to"
      }
    }
  },
  "FILTERS_FACET": {
    "format": "object",
    "elements": {
      "$query_filters": {
        "format": "array",
        "itemtype": "FILTERS_QUERY_OBJECT",
        "min": 1,
        "optional": false,
        "hint": "List of filter query objects"
      }
    }
  },
  "FILTERS_QUERY_OBJECT": {
    "format": "object",
    "elements": {
      "$name": {
        "format": "ref",
        "type": "string",
        "optional": false,
        "hint": "Name of filter bucket"
      },
      "$query": {
        "format": "ref",
        "type": "QUERY",
        "optional": false,
        "hint": "Query of the facet filter bucket"
      }
    }
  }

}
