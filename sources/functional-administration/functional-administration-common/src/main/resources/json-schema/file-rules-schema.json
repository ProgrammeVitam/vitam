{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date-opt-time": {
      "description": "pattern: Date",
      "anyOf": [
        {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        {
          "type": "string",
          "format": "date-time"
        },
        {
          "type": "string",
          "format": "date-time-vitam"
        }
      ]
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string"
    },
    "_tenant": {
      "type": "integer"
    },
    "_v": {
      "type": "integer"
    },
    "RuleId": {
      "type": "string"
    },
    "RuleType": {
      "type": "string"
    },
    "RuleValue": {
      "type": "string"
    },
    "RuleDescription": {
      "type": "string"
    },
    "RuleDuration": {
      "type": "string"
    },
    "RuleMeasurement": {
      "type": "string"
    },
    "CreationDate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "UpdateDate": {
      "$ref": "#/definitions/date-opt-time"
    }
  },
  "required": ["_id", "_tenant", "_v", "RuleId", "RuleType", "RuleValue", "CreationDate", "UpdateDate"],
  "anyOf": [
    {
      "properties": {
        "RuleType": { "enum" : ["HoldRule"] }
      }
    },
    { "required": ["RuleDuration", "RuleMeasurement"] }
  ]
}
