{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date-opt-time": {
      "description": "pattern: Date",
      "anyOf": [
        {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        {
          "type": "string",
          "format": "date-time"
        },
        {
          "type": "string",
          "format": "date-time-vitam"
        }
      ]
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string"
    },
    "_tenant": {
      "type": "integer"
    },
    "_v": {
      "type": "integer"
    },
    "Name": {
      "type": "string"
    },
    "Identifier": {
      "type": "string"
    },
    "Description": {
      "type": "string"
    },
    "Status": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "INACTIVE"
      ]
    },
    "CheckParentLink": {
      "type": "string",
      "enum": [
        "AUTHORIZED",
        "REQUIRED",
        "UNAUTHORIZED"
      ]
    },
    "CreationDate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "LastUpdate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "ActivationDate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "DeactivationDate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "LinkParentId": {
      "type": "string"
    },
    "CheckParentId": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ArchiveProfiles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "MasterMandatory": {
      "type": "boolean"
    },
    "EveryDataObjectVersion": {
      "type": "boolean"
    },
    "DataObjectVersion": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "BinaryMaster",
          "Dissemination",
          "Thumbnail",
          "TextContent",
          "PhysicalMaster"
        ]
      }
    },
    "FormatUnidentifiedAuthorized": {
      "type": "boolean"
    },
    "ComputeInheritedRulesAtIngest": {
      "type": "boolean"
    },
    "EveryFormatType": {
      "type": "boolean"
    },
    "FormatType": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ManagementContractId": {
      "type": "string"
    },
    "SignaturePolicy": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "SignedDocument": {
          "type": "string",
          "enum": [
            "ALLOWED",
            "ONLY",
            "FORBIDDEN"
          ]
        },
        "NeedSignature": {
          "type": "boolean"
        },
        "NeedTimestamp": {
          "type": "boolean"
        },
        "NeedAdditionalProof": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "_id",
    "_tenant",
    "_v",
    "Identifier",
    "Status",
    "CreationDate",
    "LastUpdate",
    "Name",
    "MasterMandatory",
    "EveryDataObjectVersion",
    "FormatUnidentifiedAuthorized",
    "EveryFormatType"
  ]
}
