{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date-opt-time": {
      "description": "pattern: Date",
      "anyOf": [
        {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        {
          "type": "string",
          "format": "date-time"
        },
        {
          "type": "string",
          "format": "date-time-vitam"
        }
      ]
    },
    "nullable-date-opt-time": {
      "description": "pattern: Date",
      "anyOf": [
        {
          "$ref": "#/definitions/date-opt-time"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string"
    },
    "_tenant": {
      "type": "integer"
    },
    "_v": {
      "type": "integer"
    },
    "Name": {
      "type": "string"
    },
    "Identifier": {
      "type": "string"
    },
    "Description": {
      "type": "string"
    },
    "Status": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "INACTIVE"
      ]
    },
    "CreationDate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "LastUpdate": {
      "$ref": "#/definitions/date-opt-time"
    },
    "ActivationDate": {
      "$ref": "#/definitions/nullable-date-opt-time"
    },
    "DeactivationDate": {
      "$ref": "#/definitions/nullable-date-opt-time"
    },
    "DataObjectVersion": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "BinaryMaster",
          "Dissemination",
          "Thumbnail",
          "TextContent",
          "PhysicalMaster"
        ]
      }
    },
    "OriginatingAgencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "WritingPermission": {
      "type": "boolean"
    },
    "WritingRestrictedDesc": {
      "type": "boolean"
    },
    "EveryOriginatingAgency": {
      "type": "boolean"
    },
    "EveryDataObjectVersion": {
      "type": "boolean"
    },
    "RootUnits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ExcludedRootUnits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "AccessLog": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "INACTIVE"
      ]
    }
  },
  "required": [
    "_id",
    "_tenant",
    "Name",
    "_v",
    "Identifier",
    "Status",
    "CreationDate",
    "LastUpdate",
    "EveryDataObjectVersion",
    "EveryOriginatingAgency",
    "WritingPermission",
    "AccessLog"
  ]
}
