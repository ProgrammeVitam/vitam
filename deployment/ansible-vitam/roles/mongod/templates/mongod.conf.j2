# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/


# where to write logging data.
systemLog:
  destination: syslog
  syslogFacility: local0
  logAppend: true


# Where and how to store data.
storage:
  dbPath: {{ mongo_db_path }}
  journal:
    enabled: {% if mongo_arbiter is defined and mongo_arbiter| lower == "true" %}false{% else %}true{% endif %}

  directoryPerDB: true


# network interfaces
net:
  port: {{ mongodb.mongod_port }}
  bindIp: {{ ip_service }}{% if groups['hosts-dev-tools'] | length > 0 and ip_service != ip_admin %},{{ ip_admin }}{% endif %}


# operationProfiling:
replication:
  replSetName: shard{{ mongo_shard_id }} # name of the replica set
  enableMajorityReadConcern: true

sharding:
  clusterRole: shardsvr # role du shard


